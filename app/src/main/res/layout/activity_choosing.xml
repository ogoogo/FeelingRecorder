<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChoosingActivity" android:background="#d7b7a3">


    <Button
            android:text="イイコト"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/goodButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="ヤナコト"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/badButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp" app:srcCompat="@drawable/kotori2" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:layout_width="400dp"
            android:layout_height="400dp" app:srcCompat="@drawable/circle" android:id="@+id/imageButton2"
            tools:layout_editor_absoluteY="146dp" tools:layout_editor_absoluteX="-192dp"/>
    <ImageButton
            android:layout_width="400dp"
            android:layout_height="400dp" app:srcCompat="@drawable/circle" android:id="@+id/imageButton3"
            tools:layout_editor_absoluteY="-43dp" tools:layout_editor_absoluteX="-23dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>