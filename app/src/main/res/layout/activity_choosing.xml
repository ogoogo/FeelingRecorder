<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChoosingActivity" android:background="#d7b7a3">


    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp" app:srcCompat="@drawable/kotori2" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cardView5"/>
    <Button
            android:text="イイコト"
            android:gravity="right|center_vertical"
            android:layout_width="400dp"
            android:layout_height="400dp" android:id="@+id/goodButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="220dp" android:background="@drawable/circle" android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    <Button
            android:text="ヤナコト"
            android:layout_width="400dp"
            android:layout_height="400dp" android:id="@+id/badButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="220dp" app:layout_constraintVertical_bias="0.3"
            android:background="@drawable/circle" android:gravity="center_vertical" android:textSize="18sp"/>
    <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/cardView5" android:layout_marginBottom="8dp">
        <TextView
                android:padding="4dp"
                android:text="どっちの気分？"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/okameTextChoosing" android:textSize="18sp"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>