<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:theme="@style/ThemeOverlay.FeelingRecorder.AppWidgetContainer"
                android:background="@color/purple_500"
                android:layout_width="300dp"
                android:layout_height="75dp"
                android:padding="@dimen/widget_margin">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="今日のイイコト"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/appwidget_text" android:textSize="20sp"
                android:textColor="#FFFFFF" android:layout_weight="2"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/widgetDate" android:layout_weight="5"
                    android:textColor="#FFFFFF" android:textSize="18sp" android:layout_gravity="center"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/widgetContent" android:layout_weight="3"
                        android:textColor="#FFFFFF" android:textSize="18sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/widgetPerson" android:layout_weight="3"
                        android:textColor="#FFFFFF" android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>