<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/eventTextEdit"
            android:hint="セリフ" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.3"/>
    <Button
            android:text="保存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/saveButtonEdit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="3"
            android:id="@+id/barometerEditTextEdit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:hint="1~5" app:layout_constraintHorizontal_bias="0.7" app:layout_constraintVertical_bias="0.5"/>
    <TextView
            android:text="嬉しさ度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/barometerTextViewEdit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.3"/>

    <TextView
            android:text="日付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dateTextViewEdit"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="人の名前"
            android:ems="10"
            android:id="@+id/PersonEditTextEdit" tools:layout_editor_absoluteY="126dp"
            tools:layout_editor_absoluteX="102dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="に"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2Edit"
            app:layout_constraintStart_toEndOf="@+id/PersonEditTextEdit"
            app:layout_constraintBottom_toBottomOf="@+id/PersonEditTextEdit"
            android:textSize="16sp"/>
    <TextView
            android:text="と言われた！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3Edit"
            app:layout_constraintStart_toEndOf="@+id/eventTextEdit"
            app:layout_constraintBottom_toBottomOf="@+id/eventTextEdit"
            android:textSize="16sp"/>
    <Button
            android:text="今日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/todayButtonEdit"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.01"/>
    <Button
            android:text="昨日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/yesterdayButtonEdit" tools:layout_editor_absoluteY="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.08"/>
    <Button
            android:text="その他"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/otherDayButtonEdit" tools:layout_editor_absoluteY="99dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.15
"/>

</androidx.constraintlayout.widget.ConstraintLayout>