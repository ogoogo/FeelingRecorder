<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SavedActivity" android:background="#d7b7a3">
    <com.google.android.material.button.MaterialButton
            app:cornerRadius="16dp"
            android:text="HOME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/backButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"/>
    <TextView
            android:text="保存しました！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/saveTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/dateEditText" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp" android:textColor="#673321"/>
    <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/imageView3">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/messageTextView"
                app:layout_constraintTop_toBottomOf="@+id/saveTextView"
                android:padding="8sp" android:textSize="18sp"/>
    </androidx.cardview.widget.CardView>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp" app:srcCompat="@drawable/kotori3" android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/backButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>