<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WritingActivity">


    <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日記を追加する"
            android:id="@+id/diarySwitch" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7"/>
    <com.google.android.material.slider.Slider


            android:valueFrom="1"
            android:valueTo="5"
            android:stepSize="1" android:layout_width="200dp" android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/barometerTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:labelBehavior="floating" android:id="@+id/barometerSlider"/>
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            app:boxStrokeColor="@color/teal_200"
            app:endIconTint="@color/teal_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.3"
            android:hint="セリフ"
    >
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="15"
                android:id="@+id/eventText"
                                 android:maxLength="16"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:text="保存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/saveButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"/>
    <TextView
            android:text="嬉しさ度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/barometerTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.3"/>
    <Button
            android:text="セ\nリ\nフ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/quoteButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.4"/>
    <Button
            android:text="そ\nの\n他"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/otherButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.5"/>
    <TextView
            android:text="日付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dateTextView"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.1"/>
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="10" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.2"
            app:boxStrokeColor="@color/teal_200"
            app:endIconTint="@color/teal_200"
            android:hint="人の名前">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"

                android:ems="10"
                android:id="@+id/PersonEditText"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
            android:text="に"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textField"
            app:layout_constraintBottom_toBottomOf="@+id/textField"
            android:textSize="16sp"/>
    <TextView
            android:text="と言われた！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textField3"
            app:layout_constraintBottom_toBottomOf="@+id/textField3"
            android:textSize="16sp"/>
    <Button
            android:text="今日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/todayButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.01"/>
    <Button
            android:text="昨日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/yesterdayButton" tools:layout_editor_absoluteY="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.08"/>
    <Button
            android:text="その他"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/otherDayButton" tools:layout_editor_absoluteY="99dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.15
"/>
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="100"
            app:boxStrokeColor="@color/teal_200"
            app:endIconTint="@color/teal_200" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.8"
            android:hint="日記"
    >
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="18"
                android:id="@+id/diaryEditText" />

    </com.google.android.material.textfield.TextInputLayout>



</androidx.constraintlayout.widget.ConstraintLayout>